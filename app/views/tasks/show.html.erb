<h1 class="todo_list_title">Título: <%= @task.title.capitalize %></h1>
<p class="todo_list_sub_title">Descripción: <%= @task.details %></p>
<p class="todo_list_sub_title">Completada: <% if @task.completed %>
 <i class="fas fa-check-circle"></i>
 <% else %>
 <i class="far fa-circle"></i>
 <% end %></p>

 <div class="links">
   <%= link_to "Editar Tarea",  edit_task_path%> <br>
   <%= link_to "Regresar a Listado de Tareas", tasks_path %>
 </div>
